<h1>Login</h1>
<%= form_for :session do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password%>
  <%= f.password_field :password%>
  <%= f.label :password_confirmation, "password confirmation"%>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "login" %>
  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>
  <span>Remember me on this computer</span>
<% end %>
