          <div class="logo">
            <a href="index.html">
              <%= image_tag "logo/logo.png" %>
            </a>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-12 col-sm-4">
          <div class="search-box">
            <form>
              <div class="input-group-search">
                <input class="search-index" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." value="">
                <div class="input-group-append">
                  <button class="btn search-button-index">Tìm kiếm</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="col-lg-5 col-md-4 col-12 col-sm-4">
          <div class="header-middle-right f-right">
            <div class="header-login">
              <% if logged_in? %>
                <%= link_to "logout" do %>
                  <div class="header-icon-style">
                    <i class="icon-user icons"></i>
                  </div>
                  <div class="login-text-content">
                    <p>Sign out <br></p>
                  </div>
                <% end %>
              <% else %>
                <%= link_to "login" do %>
                  <div class="header-icon-style">
                    <i class="icon-user icons"></i>
                  </div>
                  <div class="login-text-content">
                    <p>Register <br> or <span>Sign in</span></p>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="header-wishlist">
              <a href="wishlist.html">
                <div class="header-icon-style">
                  <i class="icon-heart icons"></i>
                </div>
                <div class="wishlist-text">
                  <p>Your <br> <span>Wishlist</span></p>
                </div>
              </a>
            </div>
            <div class="header-cart">
              <%= link_to "#" do %>
                <div class="header-icon-style">
                  <i class="icon-handbag icons"></i>
                  <span class="count-style"><%= current_order.total_quantity %></span>
                </div>
                <div class="cart-text">
                  <span class="digit">My Cart</span>
                  <span class="cart-digit-bold">$<%= current_order.subtotal %></span>
                </div>
              <% end %>
              <div class="shopping-cart-content">
                <ul>
                  <li class="single-shopping-cart">
                    <% current_order.product_orders.each do |product_order| %>
                      <div class="shopping-cart-img">
                        <%= link_to "product_order.product" do %>
                          <%= image_tag "cart/cart-1.jpg" %>
                        <% end %>
                      </div>
                      <div class="shopping-cart-title">
                        <h4><%= link_to product_order.product.name, "product_order.product" %></h4>
                        <h6>Qty:<%= product_order.quantity %> </h6>
                        <span>$<%= product_order.product.price %></span>
                      </div>
                      <div class="shopping-cart-delete">
                        <%= link_to "product_orders/#{product_order.product_id}", method: :delete do %>
                          <i class="ion ion-close"></i>
                        <% end %>
                      </div>
                    <% end %>
                  </li>
                </ul>
                <div class="shopping-cart-total">
                  <!-- <h4>Shipping : <span>$20.00</span></h4> -->
                  <h4>Total : <span class="shop-total">$<%= current_order.subtotal %></span></h4>
                </div>
                <div class="shopping-cart-btn">
                  <%= link_to "view cart", carts_path %>
                  <%= link_to "checkout", checkouts_path %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
