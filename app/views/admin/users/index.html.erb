<section class="content-header">
  <h1 class="admin-title">
    Tat ca user
  </h1>
  <div class="bnt-new">
    <%=link_to "Thêm mới", new_admin_user_path %>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Tên user</th>
              <th>Quyen han</th>
              <th>Phan quyen</th>
              <th>Thong tin tai khoan</th>
              <th>Xoa tai khoan</th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.role %></td>
                <th><%=link_to "edit", edit_admin_user_path(user) %></th>
                <th><%=link_to "show", admin_user_path(user) %></th>
                <th><%= link_to "Destroy", [:admin, user],
                  data: { confirm: "Are you sure?" }, method: :delete %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
