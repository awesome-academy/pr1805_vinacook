<section class="content-header">
  <h1 class="admin-title">
    Tất cả user
  </h1>
  <div class="bnt-new">
    <%=link_to "Thêm mới", new_admin_user_path %>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Tên user</th>
              <th>Quyền hạn</th>
              <th>Phân quyền</th>
              <th>Thông tin tài khoản</th>
              <th>Xóa tài khoản</th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.role %></td>
                <th><%=link_to "Chỉnh sửa", edit_admin_user_path(user) %></th>
                <th><%=link_to "Hiển thị", admin_user_path(user) %></th>
                <% unless verify_admin?(user) %>
                  <th><%= link_to "Xóa", [:admin, user],
                    data: { confirm: "Are you sure?" }, method: :delete %></th>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
