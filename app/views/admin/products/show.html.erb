<section class="content-header">
  <h1>
    Chi tiết sản phẩm
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <table>
          <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả sản phẩm</th>
             <th>Gía sản phẩm</th>
            <th>Gía khuyến mại</th>
            <th>Hình ảnh sản phẩm</th>
            <th>Trạng thái</th>
            <th>Chỉnh sửa</th>
          </tr>
          <td><%= @product.name %></td>
          <td><%= @product.description %></td>
          <td><%= @product.price %></td>
          <td><%= @product.sale_price %></td>
          <td><%= image_tag @product.image, class: "image_product_admin" %></td>
          <td><%= @product.status %></td>
          <td><%= link_to "Chỉnh sửa", edit_admin_product_path %></td>
        </table>
      </div>
    </div>
  </div>
</section>

