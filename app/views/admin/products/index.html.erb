<section class="content-header">
  <h1 class="admin-title">
    Tất cả sản phẩm
  </h1>
  <div class="bnt-new">
    <%= link_to "create product", new_admin_product_path %>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Tên sản phẩm</th>
              <th>Danh mục sản phẩm</th>
              <th>Gia</th>
              <th>Gia khuyen mai</th>
              <th>Hình ảnh sản phẩm</th>
              <th>Trạng thái</th>
              <th>Chi tiết</th>
              <th>Chỉnh sửa</th>
              <th>Xóa</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td>
                  <% product.categories.each do |category| %>
                   <%= category.name %>
                  <% end %>
                </td>
                <td><%= product.price %></td>
                <td><%= product.sale_price %></td>
                <td><%= image_tag product.image.url || "product/default.jpg", class: "image_product_admin" %></td>
                <td><%= product.status %></td>
                <td><%= link_to "Chi tiết", admin_product_path(product) %></td>
                <td><%= link_to "Chỉnh sửa", edit_admin_product_path(product) %></td>
                <td><%= link_to "Xóa", [:admin, product],
                  data: { confirm: "Are you sure?" }, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
</section>
