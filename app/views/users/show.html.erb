<div class="row">
  <div class="col-md-4 col-lg-4 offset-4">
    <div class="avatar">
      <%= image_tag @user.avatar.url || "avatar/avatar-1" %>
    </div>
    <div class="user-info">
      <span>Name: <%= @user.name %></br></span>
      <span>Email: <%= @user.email %></br></span>
      <span>Address: <%= @address.address %></br></span>
      <span>City: <%= @address.city %></br></span>
      <span>Country: <%= @address.country %></br></span>
      <span>Phone: <%= @address.phone %></br></span>
      <%= link_to edit_user_path(@user) do %>
        <div class="checkout-btn">
          <button type="submit" id="edit-user">Edit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
